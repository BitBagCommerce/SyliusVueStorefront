{
  "name": "@vue-storefront/sylius-api",
  "description": "Sylius Api Client",
  "version": "1.1.2",
  "server": "server/index.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn graphql && rimraf lib server && rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublish": "yarn build",
    "graphql": "DOTENV_CONFIG_PATH=../theme/.env yarn graphql-codegen -r dotenv/config",
    "graphql-watch": "DOTENV_CONFIG_PATH=../theme/.env yarn graphql-codegen --watch -r dotenv/config"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "@graphql-codegen/cli": "^3.0.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@graphql-codegen/fragment-matcher": "^3.0.1",
    "@graphql-codegen/typed-document-node": "^4.0.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/graphql": "^14.5.0",
    "@vue-storefront/core": "^2.7.1",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-retry": "^2.2.16",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.12.6",
    "isomorphic-fetch": "^3.0.0",
    "query-string": "^7.1.1",
    "rollup-plugin-graphql": "^0.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1"
  },
  "files": [
    "lib/**/*",
    "server/**/*",
    "README.md"
  ]
}
